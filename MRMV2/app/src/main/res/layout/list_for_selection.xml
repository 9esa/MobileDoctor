<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:id="@+id/llTopOfDialogSelected">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_search"
            android:layout_weight="0.95"
            android:editable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:enabled="true"
            android:textSize="16dp"
            android:imeOptions="actionSearch"
            android:textIsSelectable="false"
            android:clickable="false"
            android:singleLine="true" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnSelect"
            android:layout_gravity="center"
            android:background="@drawable/ic_menu_search"
            android:onClick="btnSearchOnClick" />

    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_of_diagnoses"
        android:layout_weight="0.7"
        android:paddingTop="15dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/btn_cancel_diagnoses"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logout_btn_selector"
        android:layout_weight="0.1"
        android:layout_marginLeft="@dimen/padding_save_button"
        android:layout_marginRight="@dimen/padding_save_button"
        android:layout_marginBottom="@dimen/padding_save_button"
        android:layout_marginTop="@dimen/padding_save_button" />
</LinearLayout>