<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top_attention">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_send_message_attention"
            android:id="@+id/tvAttentionTitle"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSendMessageAttention"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_attention"
            android:text="@string/send_message"
            android:padding="@dimen/padding_all_attention_message"
            android:background="@drawable/shape" />
    </LinearLayout>

</LinearLayout>